          {% if block.settings.text_1 != blank %}<div class="text1">{{block.settings.text_1}}</div>{% endif %}
          {% if block.settings.text_2 != blank %}<div class="text2">{{block.settings.text_2}}</div>{% endif %}
        </div>
        <div class="column2 five-twelfths medium-down--one-whole ">
          {% if block.settings.text_3 != blank %}<div class="text3">{{block.settings.text_3}}</div>{% endif %}
        </div>
      </div>
    </div>
    {% elsif block.type == "cta_block" %}
    <div class="cta-block grid__item one-whole" style="background-color: {{block.settings.bg_color}};">
      <div class="flex align-items-center container ">
        {% if block.settings.title != blank %}<h2>{{block.settings.title}}</h2>{% endif %}
        {% if block.settings.modal_content != blank %}
        <button type="button" class="btn" id="cta-block-{{block.id}}">{{block.settings.button}}</button>
        <script>
        $(function() {
          $('#cta-block-{{block.id}}').click(function() {
            var content = {{block.settings.modal_content | json}};
  	        Simplistic.openModal(content, 'cta-modal');
          });
        })
        </script>
        {% elsif block.settings.button != blank %}
          <div><a class="btn" href="{{block.settings.link}}">{{block.settings.button}}</a></div>
        {% endif %}
      </div>
    </div>
    {% elsif block.type == "faqs" %}
    <div class="faqs grid__item one-whole">
      <div class="faqs-wrapper">
      {% if block.settings.title != blank %}<h2>{{block.settings.title}}</h2>{% endif %}
      {% for i in (1..20) %}
      {%- assign questionKey = 'question_' | append: i -%}
        {%- if block.settings[questionKey] != blank -%}
          {%- assign answerKey = 'answer_' | append: i -%}
          <div class="faq-item">
            <button aria-expanded="false" class="flex align-items-center justify-content-between one-whole">
              <span class="question">{{block.settings[questionKey]}}</span>
              <i class="icon-collapsable animation"></i>
            </button>
            <div class="answer hide">{{block.settings[answerKey]}}</div>
          </div>
        {%- endif -%}
      {% endfor %}
      </div>
    </div>
    {% elsif block.type == "custom_html" %}
    <style>
    .multipurpose .custom-html.block-{{block.id}} .bg {background-color: {{block.settings.bg_color}}; padding: {{block.settings.block_padding_mobile}};}
    @media all and (min-width: 901px) {
    .multipurpose .custom-html.block-{{block.id}} .bg {padding: {{block.settings.block_padding_desktop}};}
    }
    </style>
    <div class="custom-html block-{{block.id}} grid__item one-whole">
      <div class="bg">{{block.settings.content}}</div>
    </div>

    {% elsif block.type == "logos" %}
    <div class="logos grid__item one-whole" style="background-color: {{block.settings.bg_color}};">
      <div class="flex flex-wrap container">
        <style>
        {% for i in (1..8) %}
          {%- assign logoKey = 'logo_' | append: i -%}
          {%- if block.settings[logoKey] != blank -%}
            {%- assign logoWidthKey = 'logo_width_' | append: i -%}
            .multipurpose .logos img.item{{i}} {width: {{block.settings[logoWidthKey]}}%; }
          {% endif %}
        {% endfor %}
        @media (max-width: 900px) {
        {% for i in (1..8) %}
          {%- assign logoKey = 'logo_' | append: i -%}
          {%- if block.settings[logoKey] != blank -%}
            {%- assign logoWidthMobileKey = 'logo_width_mobile_' | append: i -%}
            .multipurpose .logos img.item{{i}} {width: {{block.settings[logoWidthMobileKey]}}%; }
          {% endif %}
        {% endfor %}
        }
        </style>
        {% for i in (1..8) %}
          {%- assign logoKey = 'logo_' | append: i -%}
          {%- if block.settings[logoKey] != blank -%}
            <img class="item{{i}} lazyload" data-sizes="auto" data-srcset="{% include 'lazy_src', image: block.settings[logoKey] %}" alt="{{block.settings[logoKey].alt}}" />
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% elsif block.type == "image_text" and block.settings.show_block %}
    <div class="image-text grid__item one-whole {% if block.settings.full_width == true %}full-width{%- endif -%} ">
      <div class="image-text-wrapper flex {% if block.settings.image_position_x == "right" %}reverse{% endif %}"  style="background-color: {{block.settings.bg_color}};">
        <div class="image one-half medium-down--one-whole">
          <div class="img lazyload" data-bgset="{% include 'lazy_src', image: block.settings.image %}">
          </div>
        </div>
        <div class="text one-half  medium-down--one-whole text-{{block.settings.text_alignment}} flex">
          <div class="wrap">
            {% if block.settings.title != blank %}<h2>{{block.settings.title}}</h2>{% endif %}
            {% if block.settings.text != blank %}<p>{{block.settings.text}}</p>{% endif %}
            {% if block.settings.button != blank %}<div><a class="btn" href="{{block.settings.link}}">{{block.settings.button}}</a></div>{% endif %}
          </div>
        </div>
      </div>
    </div>
    {% elsif block.type == "image_overlay" %}
    <style>
      .multipurpose .image-block.block-{{block.id}} .img {padding-top: {{100 | divided_by: block.settings.image.aspect_ratio}}%;}
      {%- if block.settings.image_mobile != blank -%}
      .multipurpose .image-block.block-{{block.id}} .img.mobile {padding-top: {{100 | divided_by: block.settings.image_mobile.aspect_ratio}}%;}
      {%- endif -%}
    
    </style>
    <div class="image-block block-{{block.id}} grid__item {{block.settings.width}} small--one-whole  {% if block.settings.full_width == true %}full-width{%- endif -%} ">
      {% if block.settings.link != blank %}<a href="{{block.settings.link}}">{% endif %}
      <div class="image">
        <div class="img {% if block.settings.image_mobile != blank %}medium-down--hide{% endif %}" style="{% if block.settings.image != blank %}background-image: url({{block.settings.image | img_url: 'master'}});{% endif %}background-color: {{block.settings.bg_color}};" aria-label="{{block.settings.image.alt}}"></div>
        {% if block.settings.image_mobile != blank %}
        <div class="img mobile large--hide" data-bgset="{% include 'lazy_src', image: block.settings.image_mobile %}" style="background-color: {{block.settings.bg_color}};" aria-label="{{block.settings.image_mobile.alt}}"></div>
        {% endif %}
        <div class="overlay">
          <div class="wrap text-{{block.settings.text_alignment}}" style="color: {{block.settings.text_color}};">
            {% if block.settings.title != blank %}<h2 style="color: {{block.settings.text_color}};">{{block.settings.title}}</h2>{% endif %}
            {% if block.settings.text != blank %}<p>{{block.settings.text}}</p>{% endif %}
            {% if block.settings.button != blank %}<div><a class="btn" href="{{block.settings.link}}">{{block.settings.button}}</a></div>{% endif %}
          </div>
        </div>
      </div>
      {% if block.settings.link != blank %}</a>{% endif %}
    </div>
    {% endif %}
  {% endfor %}
  </div>
  
</section>
<script>
$(function() {

  $('#shopify-section-{{section.id}} a[href^="#"]').click(function(e) {
    var elementSelector = $(this).attr('href');
    if (elementSelector=='#' || $(this).attr('onclick')) {
      return true;
    }
    e.preventDefault();
    var headerHeight = 0;
    headerHeight = $('#header').outerHeight();
    $('html,body').animate({scrollTop: $(elementSelector).offset().top -headerHeight -30},'slow');
  });

  $('#shopify-section-{{section.id}} .faqs button').click(function() {
    var $this = $(this);
    var answer = $this.closest('.faq-item').find('.answer');
    if ($this.attr('aria-expanded')=='true') {
      $this.attr('aria-expanded', 'false');
      answer.slideUp();
    } else {
      $this.attr('aria-expanded', 'true');
      answer.slideDown();
    }
    
  });

});
</script>