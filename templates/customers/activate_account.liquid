<div class="login-page account">
  <div class="container">
    <div id="customer-login">
      <h1>Activate Account</h1>
      <p class="note">Create your password to activate your account</p>
      {% form 'activate_customer_password' %}
      {{ form.errors | default_errors }}
      <input type="password" placeholder="Password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      <input type="password" placeholder="Confirm Password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      <input class="btn animation" type="submit" value="Activate Account" />
      <span class="note">or <input type="submit" class="cancel" name="decline" id="customer_decline" value="Decline Invitation" /></span>
      {% endform %}
    </div>
  </div>
</div>