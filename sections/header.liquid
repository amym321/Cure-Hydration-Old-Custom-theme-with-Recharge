        .search-mailing form input::-moz-placeholder {line-height: 200%; color: {{block.settings.search_mailing_text}}; opacity: 1;}
        .search-mailing form input:-ms-input-placeholder {line-height: 200%; color: {{block.settings.search_mailing_text}};}
