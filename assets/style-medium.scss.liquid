/* #### Ipad and SMALLER #### */

@media all and (max-width: 900px) {
    
  /*********** HEADER ***********/
  
  {% if settings.header_behavior_mobile != "fixed" %}
  .content-wrapper {padding-top: 0 !important;}
  {% endif %}
  
  {% unless settings.drop_header_mobile %}
  .header-drop {display: none;}
  {% endunless %}

  #header {position: {{settings.header_behavior_mobile}}; border-bottom: 0; z-index: 10;}
  .header .container {padding: 0;}
  .header .main-content {position: relative; padding: 0.5em 20px;}
  .header .logo img {max-width: 90px;}
  .header .menu-mobile {padding-right: 70px;}
  .top-utils {padding-right: 1.5em;padding-top: 6px;}
  .top-utils .search-icon{max-width: 18px;}

  {% if settings.show_newsletter_header or settings.show_search_header %}
  .search-mailing .form {width: 74%; margin-left: -37%;}
  .search-mailing i.lnr-cross {font-size: 30px; top: 15px;}
  .search-mailing .form .input-icon {font-size: 25px;}
  .search-mailing .form input {font-size: 40px;}
  {% endif %}

  #menu-mobile {display: block;}
  
  /*********** HOMEPAGE ***********/   
  
  #home .homepage-banner {font-size: 20px; padding: 30px 20px;}
  #home .line-section{max-width: 90%;margin: auto;}
  
  /*********** PRODUCT ***********/  
  
  .product-top {margin-top: 40px;}  

  #product-wrap{padding: 0 0 1em;}
  #product-wrap .product-info{padding: 0 20px;}
  #product-wrap>.flex{flex-direction: column;}
  #product-wrap .gallery_and_badges{width: 100%;}
  #product-wrap .product-gallery {float: none; margin: 0 auto}
  #product-wrap .product-gallery .thumbs{margin-top: 0;}
  #product-wrap .product-gallery.vertical .thumbs {margin-top: 0; padding-right: 0;}
  #product-wrap .product-gallery .active-wrapper img {max-width: 450px; margin: auto;}
  #product-wrap .title{max-width: inherit;font-size: 1.5em;}
  #product-wrap .price{font-size: 1.2em;text-align: left;}
  #product-wrap .product-info {float: none; margin: 1em 0 0 0; width: 100%; text-align: center;}
  #product-wrap .product-info .swatch label {margin: 0 4px 8px 4px;}
  #product-wrap .quantity-container{margin: auto;}
  #product-wrap .quantity-box{margin-bottom: 1em;min-height: 2.5em;}
  #product-wrap .content-available, #product-wrap .content-soldout{width: 100%;}
  #product-wrap .product-info .free-shipping-text{text-align: left;}
  #product-wrap .description{max-width: inherit;text-align: left;}
  #product-wrap #add-to-cart-button,#product-wrap .content-soldout{width: 100%;}

  #product-wrap .swatch{flex-direction: column;}
  #product-wrap .price-per-pack{margin-left: 0 !important;}
  #product-wrap .price-per-pack .pack-price{margin-bottom: 0.3em;}
  #product-wrap .custom-packs-quantity-box,
  #product-wrap .quantity-box{height: 45px !important;margin-bottom: 1em;}

  #product-wrap .slick-track{align-items: flex-start;}
  .thumbs-wrapper {margin-top: 1em;}
  .thumbs-wrapper .slick-slider .slick-slide {height: 3em; width: 3em!important; margin-right: 1em!important; display: flex; align-items: center; border: 1px solid #cecece;}
  #product-wrap .slick-slider .slick-slide{margin:0;}
  #product-wrap .product-badges-section .badge img{max-width: 50px;}
  #product-wrap .slick-slider .slick-arrow{font-size: 1em;color: #000;font-weight: 600;}
  #product-wrap .product-badges-section .badge p{margin-bottom: 0;}
  
  .product-info .spr-badge{text-align: left;margin-bottom: 1em;}

  .product-item .quick-view-btn {display: none;}
  .thumbs-swatches-wrap {padding: 10px 0 0 0;}
  
  #product-wrap .bg-title-price{display:none;}
  #product-wrap .sm-title-price{display:block;padding-top: 2em;width: 100%;}
   
  .text-blocks-section .container-big .content{margin:auto;padding: 2em 1em 1em;}
  .text-blocks-section .block h3{margin-bottom: 1em;}
  .text-blocks-section .block p{max-width: 95%;}
  
  .templateProduct .product-ingredients-section{margin: 2em auto;}
  .templateProduct .product-ingredients-section .text h3{margin-bottom: 1em;}
  
  .templateProduct .product-accordion-section{padding: 2em 0;}
  .templateProduct .product-accordion-section .panel.show{padding: 0;}
  .templateProduct .spr-summary-actions-newreview:before, .spr-summary-actions-newreview:after{display:none!important;}
  .templateProduct #shopify-product-reviews .spr-summary-actions-newreview{padding: 1.2em 8em;position: relative;top: 1em;}
  .templateProduct .spr-reviews{margin-top: 2.5em;}
  .templateProduct #shopify-product-reviews .spr-review-header-title{font-size: 1em;}
  .templateProduct #shopify-product-reviews .spr-summary-caption{padding-right: 5em;}
  .templateProduct .spr-summary{text-align: center;}
  
  .templateProduct .related-products{margin: 2em auto 4em auto;}
  .templateProduct .related-products .product-item .image-wrapper{width:100%;}
  .templateProduct .product-carousel .product-item .title{font-size: 0.9em;}

  /*********** BLOG ***********/
  
  #blog.template-grid .text-wrapper .continue {display: block;} 

  /*********** SHIPPING CALCULATOR ***********/   
  
  #shipping-calculator label {margin-top: 15px; margin-bottom: 10px;}  

  /*********** CUSTOMER ACCOUNT ***********/
  
  .my-account .content {width: 100%; float: none; margin: 0; background: none; padding: 3em 0 0; border: none;}
  .my-account .content h1 {font-size: 1.5em;}
  .my-account .heading .btn {font-size: 0.6em; font-weight: 400;}
  .my-account table {font-size: 0.8em; }
  .my-account .grid .grid__item {margin-bottom: 2em;}
  .my-account .address-title {width: 60%; line-height: 160%;}
  .my-account .address-actions {width: 40%; font-size: 0.8em; line-height: 120%;}
  .my-account .address-item p, .my-account .info p {font-size: 0.9em;}
  .my-account-menu {width: 100%; float: none; padding: 2em 0 0; margin: 0; }
  .my-account-menu .small-flex {display: flex; display: -webkit-flex;}
  .my-account-menu .goto {flex: 1; position: relative;}
  .my-account-menu .goto .trigger {cursor: pointer; display: flex !important; align-items: center; height: 100%; box-sizing: border-box; text-transform: uppercase; border: 1px solid #ddd; padding: 0 3em 0 1em; position: relative;}
  .my-account-menu .goto .trigger i {position: absolute; right: 10px; top: 0; height: 100%; display: flex; align-items: center; font-size: 1.6em;}
  .my-account-menu .goto ul {display: none; background: #fff; box-sizing: border-box; position: absolute; left: 0; top: 100%; width: 100%; padding: 1em 0 1em 2em; border: 1px solid #ddd; border-top: 0; }
  .my-account-menu .logout {width: 35%; padding: 0; margin: 0; padding-left: 1em;}
  .my-account-menu .logout .btn {margin: 0; padding: 0.9em 0; width: 100%; max-width: 100%;}
  .my-account .content input:not(.btn) {font-size: 0.8em; padding-left: 1em;}
  .my-account .content select {font-size: 0.8em; padding-left: 1em;}

}