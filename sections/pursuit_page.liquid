  .multipurpose .faqs .faq-item {border-top: 1px solid currentColor; line-height: 1.67; padding: 0.7em 0;}
  .multipurpose .faqs .faq-item:last-child {border-bottom: 1px solid currentColor;}
  .multipurpose .faqs .faq-item .question {text-align: left; font-weight: 700;}
  .multipurpose .faqs .faq-item .answer {text-align: left; padding-bottom: 1.5em;}
  .multipurpose .faqs button {background: transparent; padding: 0; align-items: start}
  .multipurpose .faqs button .icon-collapsable {top: 0.45em;}
  .multipurpose .icon-collapsable {position: relative; flex-shrink: 0; font-size: 15px; display: inline-block; width: 1em; height: 1em; margin-left: 2em; transform: scale(0.9);}
  .multipurpose .icon-collapsable:before {content: ''; position: absolute; top: 0; left: 0.4em; width: 0.2em; height: 1em; background-color: currentColor; -webkit-transition: all 0.2s linear; -moz-transition: all 0.2s linear; -o-transition: all 0.2s linear; -ms-transition: all 0.2s linear; transition: all 0.2s linear;}
  .multipurpose .icon-collapsable:after {content: ''; position: absolute; top: 0.4em; left: 0; width: 1em; height: 0.2em; background-color: currentColor; }
  .multipurpose button[aria-expanded="true"] .icon-collapsable:before {transform: rotate(90deg);}
  .multipurpose .icon-expand:before
  .multipurpose {text-align: center;}
  .multipurpose a.btn {text-decoration: none;}
  .multipurpose .btn {white-space: nowrap;}
  .multipurpose .logos > .flex {align-items: center; justify-content: space-around; max-width: 570px;}
  .multipurpose .logos img {margin-bottom: 3em;}
  .multipurpose .logos img:first-of-type {margin-left: 0;}
  .multipurpose .logos img:last-of-type {margin-right: 0;}
  .multipurpose .btn {font-size: 0.8889em;}
  .cta-modal iframe {display: block;}
  .cta-modal.tingle-modal--overflow {padding-top: 0;}
  .multipurpose .image {position: relative; overflow: hidden;}
  .multipurpose .img {position: relative; padding-top: 60%; width: 100%; background-repeat: no-repeat; background-size: cover; background-position: center; -webkit-transition: all 1s ease-out; -moz-transition: all 1s ease-out; -o-transition: all 1s ease-out; transition: all 1s ease-out; -ms-transform: scale(1, 1); -webkit-transform: scale(1, 1); transform: scale(1, 1);}
