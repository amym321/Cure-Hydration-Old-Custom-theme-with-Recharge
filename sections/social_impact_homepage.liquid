{% schema %}
{
   "name":"Social Banner Homepage",
   "presets":[
      {
         "name":"Social Banner Homepage",
         "category": "Home"
      }
   ],
   "settings":[
      {
        "type":"color",
        "id":"bg_color",
        "label":"Background Color",
        "default":"#6387fb"
      },
      {
        "type":"image_picker",
        "id":"icon",
        "label":"icon"
      },
      {
        "type":"textarea",
        "id":"text",
        "label":"Text",
        "default":"1% of all Cure sales goes to supporting global health & nutrition programs in developing countries, so you can do a good for your body and the world"
      },
	  {
        "type":"color",
        "id":"text_color",
        "label":"Background Color",
        "default":"#fff"
      }
   ]
}
{% endschema %}
<style>  
  #shopify-section-{{section.id}} .social-banner{background-color: {{section.settings.bg_color}};padding: 1.5em 0;}
  #shopify-section-{{section.id}} .container{justify-content: center;align-items: center;}
  #shopify-section-{{section.id}} img{max-width: 57px;margin-right: 2em;}
  #shopify-section-{{section.id}} p{color: {{section.settings.text_color}};font-weight: 700;margin-bottom: 0;max-width: 34.5em;}

  @media all and (max-width: 600px){
    #shopify-section-{{section.id}} .container{flex-direction: column;}
    #shopify-section-{{section.id}} img{margin: 0 0 0.5em 0;}
    #shopify-section-{{section.id}} p{text-align: center;}
  }
</style>

<section class="social-banner">
  <div class="container flex">
    {%- if section.settings.icon -%}
    <img class="lazyload" data-sizes="auto" data-srcset="{% include 'lazy_src', image: section.settings.icon %}" alt="">
    {%- endif -%}
    <p>{{section.settings.text}}</p>
  </div>
</section>