<div class="my-account-menu animation">
  <div class="clearfix small-flex">
    <div class="goto">
      <div class="trigger hide medium--show small--show">Go to... <i class="fa fa-angle-up fa-angle-down"></i></div>
      <ul>
        <li class="animation"><a href="/account">Account</a></li>
        <li class="animation"><a href="/account/addresses">Address Book</a></li>
        <li class="animation"><a href="{% unless template == "customers/account" %}/account{% endunless %}#customer_orders" class="scroll">My Orders</a></li>
        {% comment %}Begin Recharge code{% endcomment %}
        {% if customer.metafields.subscriptions.customer_string %}
          <li class="animation">
            <a href="/tools/recurring/portal/{{customer.metafields.subscriptions.customer_string}}/subscriptions">Manage Subscriptions</a>
          </li>
        {% endif %}
        {% comment %}End ReCharge code{% endcomment %}   
        <li class="animation"><a href="/pages/rewards">MY LOYALTY & REWARDS</a></li>     
      </ul>
    </div>
    <div class="logout"><a href="/account/logout"><div class="btn">Logout</div></a></div>
  </div>
</div>

<script>
  $(function(){
    $('.my-account-menu .goto .trigger').click(function(){
      $(this).siblings('ul').slideToggle();
      $(this).find('i').toggleClass('fa-angle-down');
    });
  });
</script>