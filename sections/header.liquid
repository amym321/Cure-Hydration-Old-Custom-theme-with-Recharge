  .mobile-menu.mode-overlay .menu-mobile-button i:nth-child(2) {transform: scale(0);}
  .mobile-menu.mode-overlay .menu-mobile-button i:nth-child(3) {transform: translateY(-1px) rotateZ(-45deg);}
