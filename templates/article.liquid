<div id="article" class="container clearfix">

  <div class="wrapper">
  <article class="post clearfix">
    <div class="heading">
      <h1 id="page-title">{{ article.title }}</h1> 
      
      <p class="author">{%- unless article.tags contains 'no-author' -%}Written by {{ article.author }} &mdash; {%- endunless -%}{{ article.published_at | date: "%B %d, %Y" }}</p>
      
      <div class="sharing">
        <ul class="social-meta">
          <li><a class="facebook-share" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}&text={{ article.title }}"><i class="fa fa-facebook"></i></a></li>
          <li><a class="twitter-share" target="_blank" href="https://twitter.com/share?url={{ shop.url }}{{ article.url }}&title={{ article.title }}&description={{ article.content | strip_html }}"><i class="fa fa-twitter"></i></a></li>
          <li><a class="google-share" target="_blank" href="https://plus.google.com/share?url={{ shop.url }}{{ article.url }}&title={{ article.title }}&description={{ article.content | strip_html }}"><i class="fa fa-google-plus"></i></a></li>
          <li><a class="pinterest-share" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ article.url }}&media={{ article.image.src | img_url: 'master' }}&description={{ article.title | strip_html }}"><i class="fa fa-pinterest-p"></i></a></li>
        </ul>
      </div>
    </div>
    
    {% if article.image != blank %}
      <img class="lazyload" style="margin-top: 30px;" data-sizes="auto" data-srcset="{% include 'lazy_src', image: article.image.src %}" />
    {% endif %}

    <div class="content">
      {{ article.content }}
    </div>

    {% section 'chose_your_cure_article' %}
    
    {% if blog.comments_enabled? %}
       {% include 'blog_comments' %}
    {% endif %}

  </article>

  </div>
  
  <div class="blog-sidebar">
    {% include 'blog_sidebar' %}
  </div>

</div> <!-- /#col-main -->