  {%- endfor -%}
  <div class="main-content animation-slow flex flex-wrap justify-content-between align-items-center">
    <a href="#menu-mobile" class="menu-mobile-button large--hide" aria-label="Open Menu">
      {% comment %}
      {% include 'icons', icon: 'hamburger' %}
      {% include 'icons', icon: 'close', extraHTML: 'style="display:none;"' %}
      {% endcomment %}
      <i class="animation"></i>
      <i class="animation"></i>
      <i class="animation"></i>
    </a>
    <div class="nav-wrapper flex-1">
      <nav class="main-menu flex align-items-center justify-content-start medium-down--hide {{ section.settings.menu_font}}" role="navigation">
        {%- include 'menu_main' -%}
      </nav>
    </div>
    <a href="/" class="logo">
      {%- if section.settings.logo != blank -%}
      <img class="lazyload" data-sizes="auto" data-srcset="{% include 'lazy_src', image: section.settings.logo %}" alt="{{shop.name}}" />
      {%- else -%}
      <div class="shop-name heading_font">{{shop.name}}</div>
      {%- endif -%}
    </a>
    <div class="right-nav flex-1">
      {%- for block in section.blocks -%}
      {%- if block.type == 'top_utils' -%}
      {%- if block.settings.show -%}
      <div class="utils-wrap flex justify-content-end align-items-center">
        {%- if block.settings.show_social -%}
        {%- include 'social_links' -%}
        {%- endif -%}
        {%- include 'top_utils' -%}
      </div>
      {%- endif -%}
      {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- if section.settings.behavior == "fixed" or section.settings.behavior_mobile == "fixed" -%}
<div class="header-spacer ease-animation hide{% if section.settings.behavior == "fixed" %} large--show{% endif %}{% if section.settings.behavior_mobile == "fixed" %} medium-down--show{% endif %}"></div>
<script>
  function contentPaddingTop(){
    $('.header-spacer').height($('#header .main-content').outerHeight());
  }
  $(function(){
    setTimeout(function(){
      contentPaddingTop();
    }, 200);
    $(window).resize(function(){          
      contentPaddingTop();
    });
    //$(document).on('headerResize', contentPaddingTop);
  });
</script>
{%- endif -%}

{%- include 'menu_mobile' -%}

{%- assign topUitlsCount = 0 -%}
{%- for block in section.blocks -%}
   {%- if block.type == 'top_utils' and topUitlsCount == 0 -%}
      {%- assign topUitlsCount = topUitlsCount | plus: 1 -%}
      {%- if block.settings.show_search -%}
