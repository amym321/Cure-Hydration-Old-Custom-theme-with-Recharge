<style>
  .pack_selector .pack { cursor: pointer; margin: 0.5em 1em 0.5em 0;; width: 100%; max-width: 90px; text-align: center; line-height: 100%; height: 90px; background: #fff; border-radius: 50%; margin-bottom: 0; border: 3px solid #fff; }
  .pack_selector p.p_title {margin-bottom: 0; font-size: 0.8em; font-weight: 600; }
  .pack_selector .pack p { margin-bottom: 0; text-align: center; max-width: 60%; margin: 0 auto; line-height: 100%; font-weight: 600; }
  .pack_selector .pack.selected { border: 3px solid #6387FB; }
</style>

<div class="flex align-items-top pack_selector">
  <div class="one-half pack_size">
    <p class="p_title">PACK SIZE</p>
    <div class="flex">
      <div class="pack single selected flex align-items-center"><p>14 Pack</p></div>
      <div class="pack dual flex align-items-center"><p>28 Pack</p></div>
    </div>
  </div>
  <div class="one-half pack_price">
    <p class="p_title">PRICE PER PACK</p>
    <p class="p_price"></p>
  </div>
</div>

<script>
  
  $( document ).ready(function() {
    $('.pack_selector').find('.single').trigger('click');
  });
  $('.pack_selector').find('.single').on('click', function(){
    $(this).addClass('selected');
    $('.pack_selector .dual').removeClass('selected');
    $('.content-available').find('#add-to-cart-button').val('Add to Cart - single')
  })
  $('.pack_selector').find('.dual').on('click', function(){
    $(this).addClass('selected');
    $('.pack_selector .single').removeClass('selected');
    $('.content-available').find('#add-to-cart-button').val('Add to Cart - dual')
  })
</script>