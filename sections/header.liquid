<style>
  .header {width: 100%; color: {{section.settings.header_text_color}}; position: relative; background: {{section.settings.header_color}}; {% if section.settings.header_border_color != 'rgba(0,0,0,0)' %}border-bottom: 1px solid {{section.settings.header_border_color}};{% else %}border: none;{% endif %} ; z-index: 15;}
  /*.isNotMobile .header .main-content:hover {background: {{section.settings.header_color_hover}};}*/
  .submenu-overlay .header .main-content {background: {{section.settings.header_color_hover}};}
  .header.menu-open {background: {{section.settings.header_color_hover}};}
  .header svg path {fill: {{section.settings.header_text_color}};}
  .header-spacer {height: {{settings.header_height}};}
  {%- if section.settings.behavior == "fixed" -%}
  .header-fixed #header, .force-header-fixed #header {position: fixed; z-index: 100; top: 0; left: 0; right: 0;}
  body .header-spacer {display: none !important;}
  body.header-fixed .header-spacer, body.force-header-fixed .header-spacer {display: block !important;}
  {%- endif -%}
  {%- if section.settings.over_carousel -%}
  @media all and (min-width: 901px){
    #header.over-carousel {color: {{section.settings.over_carousel_text_color}}; position: absolute; z-index: 100; background: transparent; border: none;}
    #header.over-carousel .main-menu .submenu {background: transparent;}
    #header.over-carousel :not(.utility-bar) a:not(:hover) svg path {fill: {{section.settings.over_carousel_text_color}};}
  }
  {%- endif -%}
  .header .logo {line-height: 100%; margin-left: 1em; width: 100%; max-width: {{section.settings.logo_max_width}}; transition: none; transition: unset;}
  .header .logo img {width: 100%; display: block;}
  .header .logo .shop-name {font-size: 2em; text-transform: {{ settings.heading_font_transform }}; color: {{ settings.content_heading_color }}; letter-spacing: {{settings.heading_font_letter_spacing}}; line-height: 100%; }
  .header .main-content {position: relative; height: {{settings.header_height}};}
  
  /**** menu ****/
  .main-menu .item {position: relative; font-family: inherit; margin: 0 letter-spacing: {{section.settings.menu_letter_spacing}}; text-transform: {{ section.settings.menu_text_transform }}; font-size: {{section.settings.menu_font_size}}; font-weight: {{section.settings.menu_font_weight}};}
  .main-menu .item a {display: flex !important; display: -webkit-flex !important; align-items: center; padding: 1.5em 1.75rem;}
  .utils-wrap a {padding: 1.5em 2em;}
  .utils-wrap .search-target {padding: 1.5em 2.5em 1.5em 0.8em;}
  .main-menu a[data-title="sale"], .main-menu a[data-title="warehouse-sale"] {color: #f7b19a;}
  .main-menu .submenu a .colored {text-transform: inherit; -webkit-transition: all .25s linear; -moz-transition: all .25s linear; -ms-transition: all .25s linear; -o-transition: all .25s linear; transition: all .25s linear;}
  .isNotMobile .main-menu .submenu a:hover, 
  .isNotMobile .main-menu .submenu a:hover .colored,
  .isNotMobile .top-utils .submenu a:hover {color: #CDB3A3 !important;}
  .isNotMobile .main-menu .submenu a:hover svg path {fill: #CDB3A3;}

  .top-utils .submenu .item.help-contact-item > a {width: 100%;}
  .isNotMobile .top-utils .submenu .item.help-contact-item > a:hover {color: inherit !important; background: #fdfbf9;}
  
  .main-menu > .item > a, .top-utils > div > div > a {font-size: 0.733em; letter-spacing: 0.16em; font-weight: 500; text-transform: uppercase;}
  .main-menu svg.icon {display: none; margin-left: 0.5em;}

  /* dropdown menus */
  .main-menu .submenu {display: none; font-size: 1em; background: {{ section.settings.dropdown_bg_color }};}
  .main-menu .has-dropdown > a {position: relative;}
  /*.main-menu .has-dropdown > a > svg.icon {display: inline-block;}*/
